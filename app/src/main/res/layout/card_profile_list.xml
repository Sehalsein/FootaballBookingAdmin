<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_setting_list_height"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/profile_setting_list_padding_bottom"
        android:paddingTop="@dimen/profile_setting_list_padding_top">

        <ImageView
            android:id="@+id/image_settings"
            android:layout_width="@dimen/profile_setting_list_icon_width"
            android:layout_height="@dimen/profile_setting_list_icon_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/profile_setting_list_icon_margin_left"
            android:background="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/profile_setting_list_text_margin_left"
            android:text="@string/setting" />

        <ImageView
            android:id="@+id/image_next"
            android:layout_width="@dimen/profile_setting_list_arrow_height"
            android:layout_height="@dimen/profile_setting_list_arrow_height"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/profile_setting_list_arrow_margin_right"
            android:background="@drawable/vector_arrow" />

    </LinearLayout>

</LinearLayout>