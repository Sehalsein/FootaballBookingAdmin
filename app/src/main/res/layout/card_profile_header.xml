<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_header_background_height"
        android:background="@color/color_profile_header">

        <ImageView
            android:id="@+id/image_profile_pic"
            android:layout_width="@dimen/profile_header_picture_width"
            android:layout_height="@dimen/profile_header_picture_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/color_profile_pic" />
    </RelativeLayout>

</RelativeLayout>